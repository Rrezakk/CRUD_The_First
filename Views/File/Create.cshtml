@model FileModel

<form method="post" enctype="multipart/form-data" asp-controller="File" asp-action="Create">
    <div class="border p-3 mt-4 bg-body">
        <div class=" row pb-2">
            <h2 class="text-primary">Create File</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FileName"></label>
            <input asp-for="FileName" class="form-control" required/>
        </div>
        <div class="mb-3">
            <label>Choose a file</label>
            <input type="file" class="form-control" name="upload" required/>
        </div>
        <button type="submit" class="btn btn-primary " style="width:150px">Create</button>
        <a asp-controller="File" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>

